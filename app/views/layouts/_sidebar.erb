<!--Search bar-->
<%= form_tag search_path, method: :get do %>
  <%= text_field_tag :query, '', placeholder: "Search anything..." %>
  <%= submit_tag 'Search' %>
<% end %>

<!--Directory bar-->
<ul class="directory">
  <li>
    <%= link_to "Your thoughts (#{current_user.posts.count})", root_path %>
    <% Tag.has_post.each do |tag| %>
      <li>
        <%= link_to "#{tag.name} (#{tag.posts.count})", tag_path(tag.name) %>
      </li>
    <% end %>
  </li>
</ul>